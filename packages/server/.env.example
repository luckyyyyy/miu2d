# ======================================
# Server 环境变量 (本地开发)
# ======================================

# 数据库连接 URL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/miu2d_db

# MinIO (S3 兼容文件存储)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123
MINIO_BUCKET=miu2d
MINIO_USE_SSL=false

# SMTP 邮件发送配置
# 不配置则跳过邮件发送（日志中会有警告）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=Miu2D Engine <noreply@example.com>

# 前端 URL（用于邮件中的链接）
APP_URL=http://localhost:5173
